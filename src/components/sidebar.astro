---
import '../styles/global.css'
---
<div class="sidebar-container">
    <div class="signature-container">
        Ronel Xavier
    </div>
    <a href="../" class="logo-container">
        [ronxvier]
    </a>

    <div class="internal-container">
        <a href="../projects" class="internal-links">[projects]</a>
        <a href="../archive" class="internal-links">[archive]</a>
        <a href="../about" class="internal-links">[about]</a>
    </div>
</div>





<style>
    .sidebar-container {
        padding-left:1rem;
        padding-right:2rem;
        min-width: 200px;
        flex-shrink: 0;
    }

    .internal-container {
        padding-top: 1rem;
        display: flex;
        gap: 0.2rem;
        flex-direction: column;
    }

    @media (max-width: 768px) {
        .sidebar-container {
            min-width: auto;
            padding-left: 1rem;
            padding-right: 1rem;
            padding-bottom: 1rem;
        }
        .internal-container {
            flex-direction: row;
            flex-wrap: wrap;
            gap: 0.5rem;
            padding-top: 0.5rem;
        }
    }

</style>
